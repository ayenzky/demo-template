doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    title Content Manager

    link(rel="icon", href= records.site.sitedata[0].icon, type="image/*")
    link(rel="shortcut icon", href= records.site.sitedata[0].icon, type="img/*")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>

    <link href='https://fonts.googleapis.com/css?family=Lato:400,300,700,900' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

    <link href="https://cdn.jsdelivr.net/animatecss/3.5.1/animate.min.css" rel="stylesheet">



    <link rel="stylesheet" href="http://webriqcms.netlify.com/assets/vendor.css">
    <link rel="stylesheet" href="http://webriqcms.netlify.com/assets/cms.css">



    script!= "CMS_ENV = \"" + (process.env.CMS_ENV || "production") + "\";"

    base(href="/admin/")
  body



    script(type="text/x-handlebars" data-template-name='cms/preview/pages').
      <div id="main-wrapper">
        <div class="container">
          <!--Content-->
          <article class="box post">
            {{#if entry.banner }}
            {{cms-preview field='banner'}}
            {{/if}}
            <header>
              <h2>{{ entry.title }}</h2>
            </header>
            {{cms-preview field='body'}}
          </article>
        </div>
      </div>

    script(type="text/x-handlebars" data-template-name='cms/preview/result').
          <div id="main-wrapper">
          <div class="container">
          <h1>Menu Items</h1>
          <hr>
          <ul class="menu-preview">
          {{#cms-preview field="result" as |results| }}
            <li><a href="{{results.url}}">{{results.item}}</a></li>
          {{/cms-preview}}
          </ul>
          </div>
          </div>


    script(type="text/x-handlebars" data-template-name='cms/preview/sitedata').
      <div id="main-wrapper">
        <div class="container">
            <h1>Website Information</h1>
            <hr>
          {{#cms-preview field="sitedata" as |sitedatas| }}
            <h4>Favicon</h4>
            <p>{{{cms-preview field="icon" from=sitedatas}}}</p>
            <h4>Logo</h4>
            <p>{{cms-preview field="logo" from=sitedatas}}</p>
            <h4>Website Name</h4>
            <p>{{sitedatas.sitename}}</p>
            <h4>Meta Description</h4>
            <p>{{sitedatas.sitename}}</p>
            <h4>Meta Author</h4>
            <p>{{sitedatas.metauthor}}</p>
            <h4>Meta Keywords</h4>
            <p>{{sitedatas.metakeyword}}</p>
            <h4>Copyright Text</h4>
            <p>{{sitedatas.footer}}</p>

          {{/cms-preview}}
        </div>
      </div>




    script(src="http://webriqcms.netlify.com/assets/vendor.js")
    script(src="http://webriqcms.netlify.com/assets/cms.js")
